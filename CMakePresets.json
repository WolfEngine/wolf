{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "description": "base project for other configurations.",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}",
            "cacheVariables": {
                "ARCH": "win64",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
            }
        },
        {
            "name": "windows-x64-msvc-static",
            "inherits": "base",
            "hidden": false,
            "generator": "Visual Studio 17 2022",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "LIBRARY_TYPE": "STATIC",
                "VCPKG_TARGET_TRIPLET": "x64-windows-static",
                "CMAKE_CONFIGURATION_TYPES": "Debug;Release;RelWithDebInfo;MinSizeRel"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "windows-x64-msvc-static",
            "displayName": "windows-x64-msvc-static",
            "description": "Build wolf for Windows x64 as a static library",
            "configurePreset": "windows-x64-msvc-static"
        }
    ]
}